<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.gogulf.passenger.app.ui.locationselector.LocationSelectorViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context="com.gogulf.passenger.app.ui.locationselector.LocationSelectorActivity">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_back"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="12dp"
                    android:layout_marginStart="4dp"
                    android:src="@drawable/ic_toolbar_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/btnGS" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="16dp"
                    android:paddingVertical="3dp"
                    app:layout_constraintBottom_toBottomOf="@id/btnBack"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btnBack"
                    app:layout_constraintTop_toTopOf="@id/btnBack">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_middle_in_list"
                        android:backgroundTint="@color/primary_new"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/edtSearch"
                        style="@style/textStyle14"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:background="@null"
                        android:hint="Type address here..."
                        android:importantForAutofill="no"
                        android:maxLines="1"
                        android:paddingHorizontal="16dp"
                        android:text="@={viewModel.searchQuery}"
                        android:textColor="@color/black"
                        android:textColorHint="@color/sub_text_color_new"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!--            <EditText-->
                <!--                android:id="@+id/edtSearch"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="wrap_content"-->
                <!--                android:layout_marginEnd="16dp"-->
                <!--                android:text="@={viewModel.searchQuery}"-->
                <!--                app:hint="Type for point"-->

                <!--                android:textColor="@color/text_color_white"-->
                <!--                 />-->

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerGoogleAutocomplete"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/main_back" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</layout>