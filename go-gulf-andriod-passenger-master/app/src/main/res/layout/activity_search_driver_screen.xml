<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="modeJR"
            type="com.gogulf.passenger.app.data.model.response.currentride.Quote" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_0dp"
            android:layout_marginBottom="-20dp"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@id/bottomSheetConstraint"
            app:layout_constraintTop_toTopOf="parent" />
        <!--   <View
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:background="@color/editTextBackground"
               android:visibility="visible"
               app:layout_constraintBottom_toBottomOf="parent"
               app:layout_constraintTop_toTopOf="parent" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/nowBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:layout_editor_absoluteX="0dp" />

        <include
            android:id="@+id/waitingDriver"
            layout="@layout/layout_wait_for_driver"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            app:modeJR="@{modeJR}"
            app:layout_constraintBottom_toTopOf="@id/bottomSheetConstraint"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomSheetConstraint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/round_map"
            android:clickable="true"
            android:focusable="true"
            app:behavior_hideable="false"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
            app:layout_constraintBottom_toBottomOf="parent">

            <include
                android:id="@+id/bottomSheetLayout"
                layout="@layout/layout_request_driver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_15dp"
                app:modeJR="@{modeJR}"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>