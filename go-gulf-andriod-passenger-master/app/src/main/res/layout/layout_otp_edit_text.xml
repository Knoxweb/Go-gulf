<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/m_5dp"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/m_5dp"
            android:weightSum="6">


            <EditText
                android:id="@+id/inputValueOne"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/av_black_700"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textCursorDrawable="@null"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="@dimen/t_20sp" />

            <EditText
                android:id="@+id/inputValueTwo"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/av_black_700"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/t_20sp" />

            <EditText
                android:id="@+id/inputValueThree"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/av_black_700"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/t_20sp" />

            <EditText
                android:id="@+id/inputValueFour"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/av_black_700"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/t_20sp" />

            <EditText
                android:id="@+id/inputValueFifth"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/av_black_700"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/t_20sp" />

            <EditText
                android:id="@+id/inputValueSix"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_5dp"
                android:layout_weight="1"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/av_black_700"
                android:gravity="center"
                android:imeOptions="actionGo"
                android:inputType="phone"
                android:maxLength="1"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/t_20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/errors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_5dp"
            android:fontFamily="@font/av_regular_400"
            android:paddingHorizontal="2dp"
            android:paddingVertical="2dp"
            android:textColor="@color/red"
            android:visibility="gone" />


    </LinearLayout>

</layout>