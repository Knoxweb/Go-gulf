<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardLayout"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_background_alert"
        android:paddingHorizontal="12dp"
        android:layout_gravity="center"
        android:paddingVertical="12dp">

        <ImageView
            android:id="@+id/alertIcon"
            android:layout_width="147.1dp"
            android:layout_height="85dp"
            android:layout_marginTop="@dimen/m_12dp"
            android:contentDescription="@string/alert_icons"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_launcher"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="@dimen/m_30dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="@dimen/m_70dp" />

        <TextView
            android:id="@+id/alertTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/m_20dp"
            android:layout_marginTop="@dimen/m_15dp"
            android:fontFamily="@font/av_heavy_800"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/t_20sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alertIcon"
            tools:text="Exit App"
            tools:visibility="visible" />


        <TextView
            android:id="@+id/alertText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/m_20dp"
            android:layout_marginTop="@dimen/m_10dp"
            android:fontFamily="@font/av_medium_500"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/t_15sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/alertTitle"
            tools:text="Are you sure want "
            tools:visibility="visible" />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="@dimen/m_10dp"
            android:layout_marginTop="@dimen/m_12dp"
            android:alpha="0.3"
            android:background="@color/dividerColor"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/alertText" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/buttonLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/negativeTextBtn"
                style="?attr/materialCardViewOutlinedStyle"
                android:layout_width="0dp"
                app:cardCornerRadius="@dimen/text_field_corner_radius"
                app:cardBackgroundColor="@android:color/transparent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/m_10dp"
                android:gravity="center"
                android:minWidth="@dimen/m_80dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:strokeColor="@color/sub_text_color_new"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/positiveTextBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:visibility="gone">

                <TextView
                    android:id="@+id/negativeText"
                    style="@style/textStyle16m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/m_5dp"
                    android:gravity="center"
                    android:paddingVertical="@dimen/m_5dp"
                    android:text="No"
                    android:textColor="@color/sub_text_color_new"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText"
                    tools:visibility="visible" />

            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/positiveTextBtn"
                style="?attr/materialCardViewOutlinedStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/text_field_corner_radius"
                app:cardBackgroundColor="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/negativeTextBtn"
                app:layout_constraintTop_toTopOf="parent"
                app:strokeColor="@color/btnGS">

                <TextView
                    android:id="@+id/positiveText"
                    style="@style/textStyle16m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="@dimen/m_5dp"
                    android:gravity="center"
                    android:paddingVertical="@dimen/m_6dp"
                    android:text="@string/done"
                    android:textColor="@color/btnGS"
                    android:textStyle="bold"
                    android:visibility="visible"
                    tools:ignore="HardcodedText"
                    tools:text="CLOSE APP"
                    tools:visibility="visible" />
            </com.google.android.material.card.MaterialCardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
