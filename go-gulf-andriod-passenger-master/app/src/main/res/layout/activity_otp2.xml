<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>


        <variable
            name="activity"
            type="com.gogulf.passenger.app.ui.auth.forgotpassword.otp.ForgotOtpActivity" />

        <variable
            name="viewModel"
            type="com.gogulf.passenger.app.ui.auth.forgotpassword.otp.ForgotOtpViewModel" />


    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:context="com.gogulf.passenger.app.ui.auth.otpv2.OTPActivityV2">

            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_toolbar"
                app:clicked="@{()-> viewModel.runDone(activity)}"
                app:done="@{@string/done}"
                app:onBackPressed="@{()-> activity.finish()}"
                app:title="@{@string/enter_otp}" />

            <TextView
                android:id="@+id/userInformationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="@dimen/m_25dp"
                android:fontFamily="@font/av_regular_400"
                android:text="@string/enter_digit_otp"
                android:textColor="@color/black"
                android:textSize="@dimen/t_16sp"
                app:layout_constraintTop_toBottomOf="@id/toolbar" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/otpConstraint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                app:layout_constraintTop_toBottomOf="@id/userInformationText">

                <com.chaos.view.PinView
                    android:id="@+id/firstPinView"
                    style="@style/PinWidget.PinView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:cursorVisible="true"
                    android:fontFamily="@font/av_black_700"
                    android:gravity="center_horizontal"
                    android:hint=""
                    android:inputType="number"
                    android:padding="6dp"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cursorColor="@color/black"
                    app:cursorWidth="1dp"
                    app:hideLineWhenFilled="false"
                    app:itemCount="6"
                    app:itemHeight="44dp"
                    app:itemSpacing="6dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:lineColor="@color/black"
                    app:lineWidth="1dp"
                    app:viewType="line" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/resendLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/otpConstraint">

                <TextView
                    android:id="@+id/didntGetCode"
                    style="@style/textStyle16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/didn_t_receive_the_code"
                    android:textColor="@color/black"
                    android:paddingVertical="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/btnResend"
                    style="@style/textStyle16m"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/resendCode"
                    android:paddingHorizontal="12dp"
                    android:layout_marginEnd="-12dp"
                    android:textStyle="bold"
                    android:textColor="@color/primaryColor"
                    android:paddingVertical="12dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>
</layout>


