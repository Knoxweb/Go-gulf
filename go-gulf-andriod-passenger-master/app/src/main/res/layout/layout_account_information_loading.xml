<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.facebook.shimmer.ShimmerFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:shimmer_auto_start="true"
            app:shimmer_direction="left_to_right"
            app:shimmer_duration="1000"
            app:shimmer_repeat_count="100">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/m_20dp"
                android:paddingVertical="@dimen/m_10dp">

                <TextView
                    android:id="@+id/labelName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/m_5dp"
                    android:background="@color/dividerColor"
                    android:fontFamily="@font/av_regular_400"
                    android:gravity="center_vertical"
                    android:textColor="@color/subTitleColor"
                    android:textSize="@dimen/t_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/valueName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/valueName"
                    android:layout_width="@dimen/m_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/m_5dp"
                    android:background="@color/dividerColor"
                    android:ellipsize="end"
                    android:fontFamily="@font/av_regular_400"
                    android:gravity="center_vertical|end"
                    android:maxLines="1"
                    android:textColor="@color/subTitleColor"
                    android:textSize="@dimen/t_14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelName"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.facebook.shimmer.ShimmerFrameLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_1dp"
            android:layout_marginHorizontal="@dimen/m_20dp"
            android:background="@color/dividerColor" />

    </LinearLayout>
</layout>