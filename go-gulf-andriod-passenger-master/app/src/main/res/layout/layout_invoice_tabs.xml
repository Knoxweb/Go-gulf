<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_bacground_tabs"
        android:padding="@dimen/m_2dp">

        <TextView
            android:id="@+id/day"
            style="@style/textStyle14"
            android:layout_width="@dimen/m_0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_background_tab_selected_new"
            android:gravity="center"
            android:paddingVertical="@dimen/m_8dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/week"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Day" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/m_30dp"
            android:paddingVertical="@dimen/m_2dp"
            android:background="@color/tabSelected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/week"
            app:layout_constraintStart_toEndOf="@id/day"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/week"
            style="@style/textStyle14"
            android:layout_width="@dimen/m_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/m_8dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/month"
            app:layout_constraintStart_toEndOf="@id/day"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Week" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/m_30dp"
            android:paddingVertical="@dimen/m_2dp"
            android:background="@color/tabSelected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/month"
            app:layout_constraintStart_toEndOf="@id/week"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/month"
            style="@style/textStyle14"
            android:layout_width="@dimen/m_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/m_8dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/year"
            app:layout_constraintStart_toEndOf="@id/week"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Month" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/m_30dp"
            android:paddingVertical="@dimen/m_2dp"
            android:background="@color/tabSelected"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/year"
            app:layout_constraintStart_toEndOf="@id/month"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/year"
            style="@style/textStyle14"
            android:layout_width="@dimen/m_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingVertical="@dimen/m_8dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/month"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Year" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>