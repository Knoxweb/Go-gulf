<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="pax"
            type="String" />

        <variable
            name="lug"
            type="String" />

        <variable
            name="wheel"
            type="String" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/driverInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/capacityLabel"
            style="@style/textStyle16"
            android:layout_width="@dimen/m_0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/m_20dp"
            android:fontFamily="@font/av_heavy_800"
            android:text="@string/capacity"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/capacityContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/capacityContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/m_10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/capacityComponent"
                layout="@layout/layout_capacity_ui_container"

                app:luggages="@{lug}"
                app:passengers="@{pax}"
                app:wheel="@{wheel}" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>