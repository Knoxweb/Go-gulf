<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/trip_card_background"
        android:orientation="vertical"
        android:padding="@dimen/m_20dp">

        <TextView
            android:id="@+id/totalPriceView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/av_black_700"
            android:textColor="@color/black"
            android:textSize="@dimen/t_22sp" />

        <TextView
            android:id="@+id/rideEarning"
            style="@style/textStyle12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOTAL INVOICE"
            android:textColor="@color/black" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_1dp"
            android:layout_marginVertical="@dimen/m_10dp"
            android:background="@color/dividerColor" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/durationLabel"
                style="@style/textStyle12"
                android:layout_width="@dimen/m_0dp"
                android:layout_height="wrap_content"
                android:text="TOTAL PAID"
                android:textColor="@color/black"
                app:layout_constraintEnd_toStartOf="@id/distanceLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/durationValue"
                android:layout_width="@dimen/m_0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/av_black_700"
                android:textColor="@color/black"
                android:textSize="@dimen/t_18sp"
                app:layout_constraintEnd_toStartOf="@id/distanceValue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/durationLabel" />


            <TextView
                android:id="@+id/distanceLabel"
                style="@style/textStyle12"
                android:layout_width="@dimen/m_0dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|end"
                android:text="UNPAID"
                android:textColor="@color/black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/durationLabel"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/distanceValue"
                android:layout_width="@dimen/m_0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/av_black_700"
                android:gravity="center_vertical|end"
                android:textColor="@color/black"
                android:textSize="@dimen/t_18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/durationValue"
                app:layout_constraintTop_toBottomOf="@id/distanceLabel" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</layout>