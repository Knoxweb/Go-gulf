<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardMaterialCalender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/text_field_new_transparency"
        app:cardCornerRadius="@dimen/text_field_corner_radius_12"
        app:strokeColor="@color/primaryColor"
        android:backgroundTint="@color/primary_new"
        app:strokeWidth="2dp">


        <LinearLayout
            android:id="@+id/mainContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:minHeight="@dimen/m_50dp"
            android:paddingTop="12dp"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/m_20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bookingScheduledCalender"
                android:layout_width="match_parent"
                android:paddingBottom="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/returnBookText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/m_10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/av_heavy_800"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="Pre Booking"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_16sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/addBookingSwitch"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.6" />

                <Switch
                    android:id="@+id/addBookingSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/next"
                    android:thumb="@drawable/switch_thumb"
                    android:visibility="invisible"
                    android:track="@drawable/switch_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="UseSwitchCompatOrMaterialXml" />


            </androidx.constraintlayout.widget.ConstraintLayout>


            <include
                android:id="@+id/bookingCalender"
                layout="@layout/layout_calender_time_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="gone" />


        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

</layout>