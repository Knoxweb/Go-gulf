<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_5dp"
            android:paddingHorizontal="@dimen/m_5dp"
            android:paddingVertical="@dimen/m_2dp">

            <ImageView
                android:id="@+id/displayIcon"
                android:layout_width="@dimen/m_24dp"
                android:layout_height="@dimen/m_24dp"
                android:contentDescription="@string/app_name"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:tint="@color/btnGS"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/displayName"
                android:layout_width="@dimen/m_0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/m_10dp"
                android:fontFamily="@font/av_medium_500"
                android:paddingHorizontal="@dimen/m_10dp"
                android:paddingVertical="@dimen/m_5dp"
                tools:text="Roboto"
                android:textSize="@dimen/t_18sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/IconAction"
                app:layout_constraintStart_toEndOf="@id/displayIcon"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/IconAction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/go_to_next_screen"
                android:src="@drawable/ic_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_1dp"
            android:layout_marginHorizontal="@dimen/m_5dp"
            android:layout_marginTop="@dimen/m_5dp"
            android:background="@color/dividerColor" />
    </LinearLayout>

</layout>