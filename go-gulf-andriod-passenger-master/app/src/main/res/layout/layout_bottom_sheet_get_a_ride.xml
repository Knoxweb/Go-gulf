<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="name"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="@dimen/m_20dp">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topLabelLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">


            <ImageView
                android:id="@+id/appicon"
                android:layout_width="@dimen/m_70dp"
                android:layout_height="@dimen/m_30dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/amheer_logo"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/hintLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/av_black_700"
                android:text="@{@string/atyour_service_}"
                android:textColor="@color/subTitleColor"
                android:textSize="@dimen/t_18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/appicon" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/bodyContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_10dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/topLabelLayout">

            <include
                android:id="@+id/searchDestinationContainer"
                layout="@layout/layout_search_text_component"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_10dp"
                android:visibility="visible"
                app:hint="@{@string/where_do_you_want_to_go}" />

            <LinearLayout
                android:id="@+id/fullScreenLayoutSearch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.cardview.widget.CardView
                    android:id="@+id/toDestinationCardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/m_2dp"
                    android:layout_marginTop="@dimen/m_10dp"
                    android:layout_marginBottom="@dimen/m_5dp"
                    app:cardCornerRadius="@dimen/m_5dp"
                    app:cardElevation="@dimen/m_2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/m_2dp">

                        <TextView
                            android:id="@+id/textField"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginVertical="@dimen/m_5dp"
                            android:layout_marginEnd="@dimen/m_10dp"
                            android:fontFamily="@font/av_regular_400"
                            android:paddingHorizontal="@dimen/m_16dp"
                            android:paddingVertical="@dimen/m_5dp"
                            android:text="@string/sanepa_lalitpur_nepal"
                            android:textColor="@color/subTitleColor"
                            android:textSize="@dimen/t_16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/addViaPoint"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:ignore="Autofill" />

                        <ImageView
                            android:id="@+id/addViaPoint"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/m_20dp"
                            android:contentDescription="@string/app_name"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_add_via"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </androidx.cardview.widget.CardView>


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/shortcutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/m_20dp"
            android:layout_marginBottom="@dimen/m_20dp"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/m_20dp"
            app:layout_constraintTop_toBottomOf="@id/bodyContainer">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/shortcutRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="4"
                tools:listitem="@layout/layout_card_shortcut_search_destination" />

            <include
                android:id="@+id/addShortcut"
                layout="@layout/layout_card_shortcut_search_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_10dp" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>