<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.gogulf.passenger.app.ui.choosevehicle.ChooseVehicleV2Activity">


            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="6dp"
                android:elevation="3dp"
                android:padding="8dp"
                android:src="@drawable/ic_toolbar_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/black"/>


            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="24dp"
                android:animateLayoutChanges="true"
                android:tag="google_map"
                app:layout_constraintBottom_toTopOf="@id/tvTextInfo"
                app:layout_constraintTop_toTopOf="parent"
                map:cameraZoom="15"
                tools:context=".ui.activities.choosefleet.ChooseFleetActivity" />

            <View
                android:id="@+id/google_map_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="@id/map"
                app:layout_constraintTop_toTopOf="@id/map" />


            <TextView
                android:id="@+id/tvTextInfo"
                style="@style/textStyle12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="12dp"
                android:visibility="gone"
                android:text="Select a vehicle to continue"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/map" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/dividere"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="6dp"
                android:alpha="0.3"
                android:visibility="gone"
                app:dividerColor="@color/alertBackground"
                app:layout_constraintTop_toBottomOf="@id/tvTextInfo" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerChooseFleet"
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="@dimen/top_padding_of_bottom_view"
                android:clipToPadding="false"
                android:paddingHorizontal="12dp"
                app:layout_constraintBottom_toTopOf="@id/btnContinue"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dividere" />


            <com.gogulf.passenger.app.utils.customcomponents.PrimaryButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="@dimen/bottom_padding_of_view"
                app:buttonLabel="Continue"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</layout>