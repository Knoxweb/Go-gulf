<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


        <variable
            name="fleetModel"
            type="com.gogulf.passenger.app.data.model.Fleet" />

        <variable
            name="distance"
            type="String" />
        <variable
            name="duration"
            type="String" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12dp">


        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card"
            style="@style/Widget.Material3.CardView.Filled"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/text_field_new_transparency"
            app:cardCornerRadius="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@android:color/transparent"
            app:strokeColor="@color/primaryColor"
            app:strokeWidth="2dp">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="12dp"
                android:paddingVertical="12dp">


                <ImageView
                    android:id="@+id/ivFleet"
                    imageFromGlide="@{fleetModel.small_image_path}"
                    android:layout_width="56dp"
                    android:layout_height="0dp"
                    android:foregroundGravity="center"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="@id/llDistanceDuration"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvClass" />


                <TextView
                    android:id="@+id/tvClass"
                    style="@style/textStyle12"
                    android:layout_width="wrap_content"
                    android:layout_height="21dp"
                    android:layout_marginStart="12dp"
                    android:background="@color/primary_new"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:textColor="@color/black"
                    android:text="@{fleetModel.class_name}"
                    app:layout_constraintStart_toEndOf="@id/ivFleet"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    app:layout_constraintBottom_toBottomOf="@id/tvClass"
                    app:layout_constraintStart_toEndOf="@id/tvClass"
                    app:layout_constraintTop_toTopOf="@id/tvClass">

<!--                    <TextView-->
<!--                        style="@style/textStyle12"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:drawablePadding="3dp"-->
<!--                        android:text="@{quotes.distance}"-->
<!--                        android:textColor="@color/black"/>-->
                    <TextView
                        style="@style/textStyle10"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:drawablePadding="3dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@{@string/displayInt(fleetModel.passengers)}"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_pax"
                        app:drawableTint="@color/black"/>

                    <TextView
                        style="@style/textStyle10"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_marginStart="6dp"
                        android:drawablePadding="3dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@{@string/displayInt(fleetModel.pet)}"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_pets_24"
                        app:drawableTint="@color/black"/>
                    <TextView
                        style="@style/textStyle10"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_marginStart="6dp"
                        android:drawablePadding="3dp"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="@{@string/displayInt(fleetModel.wheelchair)}"
                        android:textColor="@color/black"
                        app:drawableStartCompat="@drawable/ic_wheelchair_24"
                        app:drawableTint="@color/black"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvFleetName"
                    style="@style/bold_16"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="6dp"
                    android:text="@{fleetModel.type_name}"
                    app:layout_constraintEnd_toStartOf="@id/tvPrice"
                    app:layout_constraintStart_toEndOf="@id/ivFleet"
                    app:layout_constraintTop_toBottomOf="@id/tvClass" />

                <TextView
                    android:id="@+id/tvPrice"
                    style="@style/textStyle16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/primaryColor"
                    android:text="@{@string/displayPrice(fleetModel.fare)}"
                    app:layout_constraintBottom_toBottomOf="@id/tvClass"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvClass" />

                <TextView
                    android:id="@+id/tvDiscountedPrice"
                    style="@style/textStyle16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:textColor="@color/primaryColor"
                    android:text="@{@string/displayPrice(fleetModel.offer_fare)}"
                    app:layout_constraintTop_toBottomOf="@id/tvPrice"
                    app:layout_constraintEnd_toEndOf="parent" />

                <LinearLayout
                    android:id="@+id/llDistanceDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toEndOf="@id/ivFleet"
                    app:layout_constraintTop_toBottomOf="@id/tvFleetName">

                    <TextView
                        style="@style/textStyle12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="3dp"
                        android:text="@{distance}"
                        android:textColor="@color/black"/>
                    <!--                    <TextView-->
                    <!--                        style="@style/textStyle12"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:drawablePadding="3dp"-->
                    <!--                        android:text="@{quotes.distance}"-->
                    <!--                        android:textColor="@color/black"-->
                    <!--                        app:drawableStartCompat="@drawable/icon_person_new"-->
                    <!--                        app:drawableTint="@color/text_color_white"/>-->

                    <TextView
                        style="@style/textStyle12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:drawablePadding="3dp"
                        android:text="@{duration}"
                        android:textColor="@color/black"/>
                </LinearLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>