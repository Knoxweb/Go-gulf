<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/m_10dp"
        android:paddingTop="@dimen/m_10dp">

        <ImageView
            android:id="@+id/shortcutImage"
            android:layout_width="@dimen/m_25dp"
            android:layout_height="25dp"
            android:layout_marginBottom="@dimen/m_5dp"
            android:contentDescription="@string/shortcut_images"
            app:layout_constraintBottom_toTopOf="@id/shortcutTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@color/primary_new"
            android:src="@drawable/ic_home_menu" />

        <TextView
            android:id="@+id/shortcutTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/m_5dp"
            android:fontFamily="@font/av_regular_400"
            android:textColor="@color/black"
            android:textSize="@dimen/t_12sp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Home" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>