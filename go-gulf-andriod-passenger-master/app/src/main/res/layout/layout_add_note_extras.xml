<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/m_10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/m_10dp"
        app:cardElevation="@dimen/m_0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/m_10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/av_heavy_800"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:paddingVertical="@dimen/m_5dp"
                    android:text="@string/add_note_to_driver"
                    android:textColor="@color/black"
                    android:textSize="@dimen/t_20sp" />

                <ImageView
                    android:id="@+id/close"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/icon_close"
                    app:tint="@color/black" />
            </LinearLayout>

            <EditText
                android:id="@+id/enterMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/av_regular_400"
                android:gravity="top"
                android:hint="@string/write_a_message"
                android:inputType="textMultiLine"
                android:maxHeight="@dimen/m_400dp"
                android:maxLength="250"
                android:minHeight="@dimen/m_200dp"
                android:padding="@dimen/m_10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/hintColor"
                android:textSize="@dimen/t_18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/m_1dp"
                android:background="@color/dividerColor" />

            <TextView
                android:id="@+id/doneButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/av_regular_400"
                android:gravity="center"
                android:paddingVertical="@dimen/m_10dp"
                android:text="Done"
                android:textColor="@color/primaryColor"
                android:textSize="@dimen/t_18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>