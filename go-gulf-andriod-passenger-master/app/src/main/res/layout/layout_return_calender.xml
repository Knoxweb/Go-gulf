<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/trip_card_background"
        android:minHeight="@dimen/m_50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/m_20dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/returnBookingCalender"
            android:layout_width="match_parent"
            android:layout_marginVertical="@dimen/m_10dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/returnBookText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/m_10dp"
                android:ellipsize="end"
                android:fontFamily="@font/av_heavy_800"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:text="@string/return_booking"
                android:textColor="@color/subTitleColor"
                android:textSize="@dimen/t_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/addReturnSwitch"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Switch
                android:id="@+id/addReturnSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/next"
                android:thumb="@drawable/switch_thumb"
                android:track="@drawable/switch_btn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="UseSwitchCompatOrMaterialXml" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_1dp"
            android:layout_marginVertical="@dimen/m_5dp"
            android:background="@color/dividerColor" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="gone"
            tools:visibility="visible"
            android:id="@+id/cardContainerCalender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/m_10dp">


            <TextView
                android:id="@+id/scheduleText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/m_5dp"
                android:ellipsize="end"
                android:fontFamily="@font/av_regular_400"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textColor="@color/subTitleColor"
                android:textSize="@dimen/t_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/calenderText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/calenderText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/m_10dp"
                android:background="@drawable/time_background_color"
                android:fontFamily="@font/av_regular_400"
                android:paddingHorizontal="@dimen/m_10dp"
                android:paddingVertical="@dimen/m_2dp"
                android:text="2022/02/12"
                android:textColor="@color/subTitleColor"
                android:textSize="@dimen/t_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/timeText"
                app:layout_constraintStart_toEndOf="@id/scheduleText"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/timeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/time_background_color"
                android:fontFamily="@font/av_regular_400"
                android:paddingHorizontal="@dimen/m_10dp"
                android:paddingVertical="@dimen/m_2dp"
                android:text="11:30 AM"
                android:textColor="@color/subTitleColor"
                android:textSize="@dimen/t_16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/closeData"
                app:layout_constraintStart_toEndOf="@id/calenderText"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/closeData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/m_10dp"
                android:contentDescription="@string/remove_return_date"
                android:src="@drawable/ic_close_return"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/timeText"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>


</layout>