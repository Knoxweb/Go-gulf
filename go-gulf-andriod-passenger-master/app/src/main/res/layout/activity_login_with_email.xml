<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.gogulf.passenger.app.ui.auth.loginwithemail.LoginWithEmailViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:fitsSystemWindows="true"
            tools:context=".ui.activities.loginwithemail.LoginWithEmailActivity">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_back"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:padding="12dp"
                    android:src="@drawable/ic_toolbar_back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/btnGS" />

                <TextView
                    android:id="@+id/tvNotification"
                    style="@style/bold_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Login with email"
                    android:textColor="@color/primary_new"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main_back">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvPlease"
                            style="@style/textStyle14"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:gravity="start"
                            android:text="Please enter your email and password below"
                            android:textColor="@color/black"
                            app:layout_constraintTop_toTopOf="parent" />


                        <com.gogulf.passenger.app.utils.customcomponents.CustomEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tvPlease"
                            android:layout_marginTop="16dp"
                            app:mainRohanText="@={viewModel.email}"
                            app:inputType="2"
                            app:hintLabel="Email"/>



                        <com.gogulf.passenger.app.utils.customcomponents.CustomEditText
                            android:id="@+id/etPassword"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/etEmail"
                            android:layout_marginTop="16dp"
                            app:mainRohanText="@={viewModel.password}"
                            app:inputType="3"
                            app:hintLabel="Password"/>


                        <TextView
                            android:id="@+id/btnForgotPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="16dp"
                            android:text="Forgot Password?"
                            android:textColor="@color/primaryColor"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etPassword" />

                        <TextView
                            android:id="@+id/btnCreateAccount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="16dp"
                            android:text="Don\'t have an account?"
                            android:textColor="@color/primaryColor"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/etPassword" />

                    </androidx.constraintlayout.widget.ConstraintLayout>


                </LinearLayout>
            </androidx.core.widget.NestedScrollView>


            <com.gogulf.passenger.app.utils.customcomponents.PrimaryButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="@dimen/bottom_padding_of_view"
                android:paddingTop="@dimen/top_padding_of_bottom_view"
                app:buttonLabel="Log in"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </RelativeLayout>

</layout>