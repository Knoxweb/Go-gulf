<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>



        <variable
            name="toolbarViewModel"
            type="com.gogulf.passenger.app.ui.base.CommonViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gsBackground">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            app:clicked="@{()-> toolbarViewModel.onValidated()}"
            app:done="@{@string/done}"
            app:onBackPressed="@{()-> toolbarViewModel.onBackPress()}"
            app:title="@{@string/enter_location}" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_0dp"
            android:layout_marginHorizontal="@dimen/m_20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/topLabelLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_10dp"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/av_regular_400"
                    android:gravity="center_vertical"
                    android:text="@string/hello"
                    android:textColor="@color/subTitleColor"
                    android:textSize="@dimen/t_16sp"
                    app:layout_constraintBottom_toTopOf="@id/hintLocation"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/userNameGreet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_5dp"
                    android:fontFamily="@font/av_regular_400"
                    android:gravity="center_vertical"
                    android:text="@string/test_name"
                    android:textColor="@color/primaryColor"
                    android:textSize="@dimen/t_16sp"
                    app:layout_constraintBottom_toTopOf="@id/hintLocation"
                    app:layout_constraintStart_toEndOf="@id/hello"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/hintLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/av_black_700"
                    android:text="@string/where_do_you_want_to_go"
                    android:textColor="@color/subTitleColor"
                    android:textSize="@dimen/t_18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userNameGreet" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/bodyContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_16dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/topLabelLayout">


                <LinearLayout
                    android:id="@+id/fullScreenLayoutSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <include
                        android:id="@+id/searchContainer"
                        layout="@layout/layout_start_destination_component"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/shortcutLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_20dp"
                android:layout_marginBottom="@dimen/m_20dp"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/m_20dp"
                app:layout_constraintTop_toBottomOf="@id/bodyContainer">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/shortcutRecyclerView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="4"
                    tools:listitem="@layout/layout_card_shortcut_search_destination" />

                <include
                    android:id="@+id/addShortcut"
                    layout="@layout/layout_card_shortcut_search_destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/m_10dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/appIcon"
                android:layout_width="@dimen/m_99dp"
                android:layout_height="@dimen/m_47dp"
                android:layout_marginBottom="@dimen/m_25dp"
                android:src="@drawable/amheer_logo"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>