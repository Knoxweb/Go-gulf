<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="activity"
            type="androidx.appcompat.app.AppCompatActivity" />

        <variable
            name="viewModel"
            type="com.gogulf.passenger.app.ui.settings.setting.SettingViewModel" />




    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            android:layout_height="match_parent"
            tools:context="com.gogulf.passenger.app.ui.settings.setting.SettingsNewActivity">


            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_toolbar"
                app:done="@{@string/empty}"
                app:onBackPressed="@{()-> activity.finish()}"
                app:title="@{@string/account}" />



            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                app:layout_constraintTop_toBottomOf="@id/toolbar">


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginHorizontal="16dp"
                    android:layout_height="wrap_content">


                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/main_rv_account_fragment"
                        style="?attr/materialCardViewFilledStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:cardBackgroundColor="@color/container"
                        app:cardElevation="0dp"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerMenuItems"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false"
                            app:layout_constraintTop_toTopOf="parent"
                            />

                    </com.google.android.material.card.MaterialCardView>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnLogout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:background="@drawable/background_middle_in_list"
                        android:backgroundTint="@color/red"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="16dp"
                        app:layout_constraintTop_toBottomOf="@id/main_rv_account_fragment">

                        <ImageView
                            android:id="@+id/iv_material"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:alpha="0.8"
                            android:src="@drawable/ic_logout"
                            android:scaleType="fitCenter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/logOutColor" />

                        <TextView
                            android:id="@+id/tv_material"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:layout_toEndOf="@+id/iv_material"
                            android:ellipsize="end"
                            style="@style/textStyle16m"
                            android:gravity="center_vertical"
                            android:text="Log out"
                            android:textColor="@color/logOutColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/forward"
                            app:layout_constraintStart_toEndOf="@id/iv_material"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/forward"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/tejilo_material_forward_arrow_without_dash_fill"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/logOutColor"/>



                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/btnDeleteAccount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/background_list_gap"
                        android:backgroundTint="@color/red"
                        android:background="@drawable/background_middle_in_list"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="16dp"
                        app:layout_constraintTop_toBottomOf="@id/btnLogout">


                        <ImageView
                            android:id="@+id/iv_material2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:alpha="0.8"
                            android:src="@drawable/baseline_delete_outline_24"
                            android:scaleType="fitCenter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/logOutColor" />

                        <TextView
                            android:id="@+id/tv_material2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginHorizontal="12dp"
                            android:layout_toEndOf="@+id/iv_material2"
                            android:ellipsize="end"
                            style="@style/textStyle16m"
                            android:gravity="center_vertical"
                            android:text="Delete account"
                            android:textColor="@color/logOutColor"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/forward2"
                            app:layout_constraintStart_toEndOf="@id/iv_material2"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/forward2"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:src="@drawable/tejilo_material_forward_arrow_without_dash_fill"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/logOutColor"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.core.widget.NestedScrollView>




        </androidx.constraintlayout.widget.ConstraintLayout>

    </RelativeLayout>

</layout>