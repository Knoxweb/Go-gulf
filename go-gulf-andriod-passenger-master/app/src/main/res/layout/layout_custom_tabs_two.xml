<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tab_layout">

        <TextView
            android:id="@+id/firstTab"
            android:layout_width="@dimen/m_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/background_selected_tab"
            android:paddingVertical="@dimen/m_8dp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/secondTab"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/textStyle14"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Completed" />

        <TextView
            android:id="@+id/secondTab"
            android:layout_width="@dimen/m_0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/textStyle14"
            android:paddingVertical="@dimen/m_8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/firstTab"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Cancelled" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>