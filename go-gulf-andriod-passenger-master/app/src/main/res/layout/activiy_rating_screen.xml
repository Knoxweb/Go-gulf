<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="?attr/actionBarSize"
                app:cardBackgroundColor="@color/transparent"
                app:cardElevation="0dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <TextView
                        android:id="@+id/titleName"
                        style="@style/textStyle20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/m_20dp"
                        android:fontFamily="@font/av_medium_500"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.1"
                        android:text="Ratings"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/btnSkip"
                        style="@style/textStyle20"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/m_20dp"
                        android:fontFamily="@font/av_medium_500"
                        android:gravity="center"
                        android:lineSpacingMultiplier="1.1"
                        android:paddingHorizontal="12dp"
                        android:text="Skip"
                        android:textColor="@color/cancelColor"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <ScrollView
                android:id="@+id/mainContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/topLayoutConstraint"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/m_20dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">


                        <TextView
                            android:id="@+id/ratingTextView"
                            style="@style/textStyle16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_25dp"
                            android:text="@string/choose_ratings"
                            android:textAllCaps="true"
                            app:layout_constraintTop_toTopOf="parent" />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/ratingConstraint"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_5dp"
                            android:background="@drawable/trip_card_background"
                            app:layout_constraintTop_toBottomOf="@id/ratingTextView">

                            <RatingBar
                                android:id="@+id/ratingBars"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/m_30dp"
                                android:rating="0"
                                android:theme="@style/RatingBar"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                android:stepSize="1"
                                />


                        </androidx.constraintlayout.widget.ConstraintLayout>


                        <com.gogulf.passenger.app.utils.customcomponents.EditTextComponent
                            android:id="@+id/tip"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/ratingConstraint"
                            app:hint="Add Tip Amount" />


                        <TextView
                            android:id="@+id/reviewTextView"
                            style="@style/textStyle16"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/m_25dp"
                            android:text="@string/write_a_review"
                            android:textAllCaps="true"
                            app:layout_constraintTop_toBottomOf="@id/tip"
                            />

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/m_5dp"
                            android:layout_marginVertical="@dimen/m_5dp"
                            android:background="@drawable/trip_card_background"
                            android:padding="@dimen/m_5dp"
                            app:layout_constraintTop_toBottomOf="@id/reviewTextView">


                            <EditText
                                android:id="@+id/textField"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="@dimen/m_5dp"
                                android:background="@color/transparent"
                                android:fontFamily="@font/av_regular_400"
                                android:gravity="top"
                                android:hint="@string/write_a_review"
                                android:inputType="textMultiLine|textCapWords"
                                android:maxLength="255"
                                android:minHeight="@dimen/m_150dp"
                                android:paddingHorizontal="@dimen/m_16dp"
                                android:paddingVertical="@dimen/m_5dp"
                                android:textColor="@color/black"
                                android:textColorHint="@color/hintColor"
                                android:textSize="@dimen/t_16sp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="Autofill" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.gogulf.passenger.app.utils.customcomponents.PrimaryButton
                        android:id="@+id/doneButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:buttonLabel="Submit"
                        android:layout_marginHorizontal="@dimen/m_20dp"
                        android:layout_marginBottom="@dimen/m_10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        />

<!--                    <TextView-->
<!--                        android:id="@+id/doneButton"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginHorizontal="@dimen/m_20dp"-->
<!--                        android:layout_marginBottom="@dimen/m_10dp"-->
<!--                        android:background="@drawable/ic_background_get_started"-->
<!--                        android:fontFamily="@font/av_black_700"-->
<!--                        android:gravity="center"-->
<!--                        android:minWidth="@dimen/m_150dp"-->
