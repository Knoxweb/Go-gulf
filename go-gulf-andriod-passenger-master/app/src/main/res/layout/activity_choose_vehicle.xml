<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="-20dp"
            app:layout_constraintBottom_toTopOf="@id/bottomSheetConstraint"
            app:layout_constraintTop_toTopOf="parent" />
        <!--<View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="visible"
            android:background="@color/red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" />-->

        <ImageView
            android:id="@+id/menuBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/m_20dp"
            android:layout_marginStart="@dimen/m_10dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_toolbar_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bottomSheetConstraint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/m_350dp"
            android:background="@drawable/round_map"
            android:clickable="true"
            android:focusable="true"
            app:layout_constraintBottom_toBottomOf="parent">

            <include
                android:id="@+id/bottomSheetLayout"
                layout="@layout/layout_choose_vehicle_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/m_20dp"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>